                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <ImageView

                        android:id="@+id/img_male"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_male_blue_icon" />

                <TextView

                    android:id="@+id/txtvw_male"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/themecolor"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout


                android:id="@+id/layout_female"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <ImageView

                        android:id="@+id/img_female"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_female_grey_icon" />

                <TextView

                    android:id="@+id/txtvw_female"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

